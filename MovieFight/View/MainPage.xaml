<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieFight.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Movie Fight" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Text="{Binding FFMovieValue}" Placeholder="First Movie" BackgroundColor="LightCoral"/>
        <Entry Text="{Binding FSMovieValue}" Placeholder="Second Movie" BackgroundColor="LightCoral"/>
        <Entry Text="{Binding MFMovieValue}" Placeholder="First Movie" BackgroundColor="LightBlue"/>
        <Entry Text="{Binding MSMovieValue}" Placeholder="Second Movie" BackgroundColor="LightBlue"/>
        <Button Command="{Binding FightCommand}" Text="FIGHT"/>
        <Label Text="{Binding WinnerValue}" BackgroundColor="LightYellow"/>
    </StackLayout>

</ContentPage>
